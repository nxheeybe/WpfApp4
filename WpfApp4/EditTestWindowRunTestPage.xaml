<Window x:Class="WpfApp4.EditTestWindowRunTestPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp4"
        mc:Ignorable="d"
        Title="EditTestWindowRunTestPage" Height="450" Width="800">
    <Grid x:Name="MainSpace">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock
                x:Name="NameTextBlock"
                Grid.Row="0"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                TextAlignment="Center"
                FontFamily="Arial Black"
                FontSize="16"
            />
            <TextBlock
                x:Name="DescriptionTextBlock"
                Grid.Row="1"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                TextAlignment="Center"
                FontFamily="Arial"
                FontStyle="Italic"
                FontSize="14"
            />
        </Grid>
        <Grid 
            x:Name="AnswersGrid"
            Grid.Row="1"
        >
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button 
                x:Name="_1AnswerButton"
                Grid.Row="0"
                Width="350"
                VerticalAlignment="Bottom"
                Content="1"
                FontSize="16"
                FontFamily="Arial"
                Click="AnswerButton_OnClick" Margin="0,0,450,10" Height="44"
            />
            <Button 
                x:Name="_2AnswerButton"
                Width="350"
                VerticalAlignment="Top"
                Content="2"
                FontSize="16"
                FontFamily="Arial"
                Click="AnswerButton_OnClick" Margin="450,0,0,0" Height="44"
            />
            <Button 
                x:Name="_3AnswerButton"
                Grid.Row="1"
                VerticalAlignment="Top"
                Content="3"
                FontSize="16"
                FontFamily="Arial"
                Click="AnswerButton_OnClick" Margin="0,11,0,0" Height="44" Grid.RowSpan="2"
            />
            <TextBlock
                x:Name="AnswerResultTextBlock"
                Grid.Row="3"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                TextAlignment="Center"
                FontFamily="Arial"
                FontStyle="Italic"
                FontSize="14"
            />

        </Grid>

    </Grid>
</Window>
